[flake8]
# Ignore small stylistic warnings
ignore = E203, E266, E501, W503, E722, E731, C901

# Enable a larger maximum line length if needed
max-line-length = 120

# Exclude certain files and directories
exclude = .git, __pycache__, venv, build, dist, migrations, static, media

# Enable Flake8 to check for complexity issues
max-complexity = 10

# Show only higher severity issues
select = E9, F63, F7, F82, C90
